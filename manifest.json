{
	"manifest_version": 2,
	"name": "Exams Countdown",
	"description": "See how far off your exams are and distribute remaining revision days between them.",
	"version": "1.0",

	"browser_action": {
		"default_icon": "icon.png",
		"default_popup": "index.html",
		"default_title": "Exams Countdown"
	},

	"permissions": [
		"storage"
	],

	"content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self';"
}